<p id="notice"><%= notice %></p>

<h1>Doadores</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Telefone</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doadores.each do |doadore| %>
      <tr>
        <td><%= doadore.name %></td>
        <td><%= doadore.email %></td>
        <td><%= doadore.telefone %></td>
        <td><%= doadore.tipo %></td>
        <td><%= link_to 'Show', doadore %></td>
        <td><%= link_to 'Edit', edit_doadore_path(doadore) %></td>
        <td><%= link_to 'Destroy', doadore, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

